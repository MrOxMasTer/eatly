{
    "compilerOptions": {
        "target": "es6",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
            // "@ui/*": ["src/ui/*"],
            // "@assets/*": ["src/assets/*"],
            // "@components/*": ["src/components/*"],
            // "@hooks/*": ["src/hooks/*"],
            // "@types/*": ["src/types/*"]
            // "@services/*": ["src/services/*"],
            // "@store/*": ["src/store/*"],
            // "@modules/*": ["src/modules/*"],
            // "@lib/*": ["src/lib/*"],
            // "@public/*": ["src/lib/*"]
        },
        "noEmit": true
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "src/app/_document.js",
        "src/redux/store/firebase.ts",
        "server/index.js"
    ],
    "exclude": ["node_modules"]
}
